<link rel="stylesheet" href="/css/indexstyle.css">

<main class="main-content">
    <!-- 사용자 메뉴 -->
    <section class="left-sidebar">
        <div class="user-info">
            <img src="user-profile.jpg" alt="User Profile" class="user-profile-img">
            <p class="user-name">홍길동</p>
        </div>

        <ul>
            <li><a href="#">PROFILE</a></li>
            <li><a href="#">CONTENT</a></li>
            <li><a href="#">TEST</a></li>
            <li><a href="#">TEST</a></li>
        </ul>

        <!-- 글쓰기 버튼 추가 -->
        <button class="write-btn">WRITE</button>
    </section>

    <!-- 글 목록 -->
    <section class="content">
        <h2>Blog Posts</h2>
        <div class="post-list">
            <!-- EJS 반복문을 사용하여 데이터베이스에서 가져온 글 목록 출력 -->
            <% blog.forEach(blog => { %>
                <div class="post-item">
                    <h3><a href="/blog/<%= blog.bloguuid %>"><%= blog.title %></a></h3>
                    <p class="post-meta">작성자: <%= blog.username %> | 작성일: <%= blog.created_at %></p>
                </div>
            <% }) %>
        </div>
    </section>


