
    <link rel="stylesheet" href="/css/indexstyle.css">
    <link rel="stylesheet" href="/css/aboutstyle.css">
</head>
<body>
    <main class="main-content">
        <!-- 사용자 메뉴 -->
        <section class="left-sidebar">
            <div class="user-info">
                <img src="user-profile.jpg" alt="User Profile" class="user-profile-img">
                <% if (combineBlogUser.length > 0 && combineBlogUser[0]) { %>
                    <p class="user-name"><%= combineBlogUser[0].username %></p>
                <% } else { %>
                    <p>No username available</p>
                <% } %>
            </div>
            <ul>
                <li><a href="#">PROFILE</a></li>
                <li><a href="#">CONTENT</a></li>
                <li><a href="#">TEST</a></li>
                <li><a href="#">TEST</a></li>
            </ul>
            <!-- 글쓰기 버튼 추가 -->
            <button class="write-btn">WRITE</button>
        </section>
        <!-- 블로그 글 상세 페이지 -->
        <section class="content">
            <div class="post-header">
                <% if (combineBlogUser.length > 0 && combineBlogUser[0]) { %>
                    <h2 class="post-title"><%= combineBlogUser[0].title %></h2>
                    <p class="post-meta">작성자: <%= combineBlogUser[0].username %> | 작성일: <%= combineBlogUser[0].created_at %></p>
                <% } else { %>
                    <p>No username available</p>
                <% } %>
            </div>
            <div class="post-content">
                <% if (combineBlogUser.length > 0 && combineBlogUser[0]) { %>
                    <p><%= combineBlogUser[0].content %></p>
                <% } else { %>
                    <p>No username available</p>
                <% } %>
            </div>
            <div class="post-tags">
                    <span>태그</span>
            </div>
            <div class="post-navigation">
                    <a href="/blog/1111/2222">← 이전 글</a>
                    <a href="/blog/1111/2222">다음 글 →</a>
            </div>
        </section>
    </main>
</body>
</html>